{
    "env": {
        "browser": true,
        "commonjs": true,
        "es6": true,
	"amd": true,
	"define": true,
	"jquery": true,
	"node": true
    },
    "extends": [
	"eslint:recommended",
	"plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true,
            "jsx": true
        },
        "sourceType": "module",
	"ecmaVersion": 6
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            "tab"
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "double"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}
